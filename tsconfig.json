{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es6"],
    "module": "CommonJS",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    // "paths": {
    //   // "/*": ["*"]
    // },
    "typeRoots": ["./node_modules/@types", "./src/types", "./src/types/schema"]
  },
  "include": ["src/**/*.ts"]
}
